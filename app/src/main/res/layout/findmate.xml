<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@color/halfwhite"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:elevation="10dp"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <RadioButton
            android:id="@+id/undoBtn"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Back"
            android:drawableTop="@drawable/undo"
                android:background="@color/halfwhite"
            android:textColor="@drawable/findmatetextcolor"
            android:button="@null"

            android:gravity="center"
            android:padding="5dp"
            android:textSize="12dp"
            android:textStyle="bold"

            />
        <RadioButton
            android:id="@+id/rejectBtn"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Pass"
            android:drawableTop="@drawable/pass"
            android:background="@color/halfwhite"
            android:textColor="@drawable/findmatetextcolor"
            android:button="@null"

            android:gravity="center"
            android:padding="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <RadioButton
            android:id="@+id/message"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Request"
            android:background="@color/halfwhite"
            android:drawableTop="@drawable/messages"

            android:textColor="@drawable/findmatetextcolor"
            android:button="@null"

            android:gravity="center"
            android:padding="5dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/acceptBtn"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Meet"
            android:drawableTop="@drawable/meet"
            android:background="@color/halfwhite"
            android:textColor="@drawable/findmatetextcolor"
            android:button="@null"

            android:gravity="center"
            android:padding="5dp"
            android:textSize="12dp"
            android:textStyle="bold"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/interestuserselectedlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"

            />
    </LinearLayout>


    </LinearLayout>
    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="165dp"

        android:background="@color/white"

        />
</FrameLayout>