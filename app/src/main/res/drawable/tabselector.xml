<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused ="true"><shape>
        <solid android:color="@color/bg_interest" />

        <stroke android:width="1dp" android:color="@color/bg_interest" />
    </shape></item>
    <item
        android:state_focused="false"
        ><shape android:shape="rectangle">
        <solid android:color="@color/innergrey" />

        <stroke android:width="1dp" android:color="@color/whitgrey" />
    </shape></item>

</selector>